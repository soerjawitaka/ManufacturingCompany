@model IEnumerable<ManufacturingCompany.Classes.PaycheckViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Index", "SelectPayroll", new { actionName = "Create", controllerName = "Paychecks" }, htmlAttributes: new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.Payroll.AspNetUser.UserName)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.paycheck_date)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.payroll_id)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.ModeOfPaycheck)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.payment_amount)
        </th>
        <th class="text-info"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Payroll.AspNetUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.paycheck_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.payroll_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModeOfPaycheck)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.payment_amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-default" })
            @if (User.IsInRole("SuperUser") || User.IsInRole("Manager") || User.IsInRole("Supervisor"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
            }
        </td>
    </tr>
}

</table>
