    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
</p>

<hr />

<div class="container">
    <h3>Contacts</h3>
</div>

@Html.ActionLink("Create Contact", "CreateContact", "Customers", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-default" })

<br />
<br />

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Office Phone
        </th>
        <th>
            Mobile Phone
        </th>
        <th>
            Fax Number
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Customer_Contact)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.work_phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mobile_phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contact_email)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditContact", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Delete", "DeleteContact", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
