<div class="container text-center">
    @if (ViewBag.ActionTitle != null)
    {
        if ((string)ViewBag.ActionTitle == "Delete ")
        {
            <h3 class="btn btn-lg text-light bg-danger">@ViewBag.ActionTitle Contact for @ViewBag.CustomerName</h3>
        }
        else
        {
            <h3 class="btn btn-lg text-dark bg-success">@ViewBag.ActionTitle Contact for @ViewBag.CustomerName</h3>
        }
    }
    else
    {
        <h3 class="btn btn-lg text-dark bg-success">Contacts for @ViewBag.CustomerName</h3>
    }
</div>

<br />
