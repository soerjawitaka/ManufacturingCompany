@model ManufacturingCompany.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2 class="card text-white bg-primary">@ViewBag.Title Profile</h2>

<div class="row" style="padding:50px;">
    <div class="col-md-5">
        <h4>@User.Identity.Name - account settings</h4>
        <p class="text-danger">@ViewBag.StatusMessage</p>
        <hr />

        <br />
        <br />

        @Html.ActionLink("View Profile", "Index", null, htmlAttributes: new { @class = "btn btn-outline-info" })

        <br />
        <br />

        @Ajax.ActionLink("Change your password", "PartialChangePassword", "Manage", null, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "ProfilePartials", InsertionMode = InsertionMode.Replace }, htmlAttributes: new { @class = "btn btn-outline-info" })

        <br />
        <br />

        @Ajax.ActionLink("Change your profile", "PartialChangeProfile", "Manage", null, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "ProfilePartials", InsertionMode = InsertionMode.Replace }, htmlAttributes: new { @class = "btn btn-outline-info" })

        <br />
        <br />
    </div>

    <div class="col-md-7" id="ProfilePartials">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.UserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.ZipCode)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.ZipCode)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LoggedInUser.PhoneNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LoggedInUser.PhoneNumber)
            </dd>
        </dl>
    </div>
</div>

