@model ManufacturingCompany.Models.ApplicationUser

@{
    ViewBag.Title = "ManageEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Employee</h2>

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
    </dl>
</div>

    <table class="table">
        <tr>
            <th>Roles</th>
        </tr>
        @foreach (var i in (List<string>)ViewBag.EmployeeRoles)
        {
            <tr>
                <td>@i</td>
            </tr>
        }
    </table>

    <h4>Change @Model.UserName account settings</h4>
    <hr />
    @Html.ActionLink("Modify Profile", "ChangeEmployeeProfile", new { userID = Model.Id }, htmlAttributes: new { @class = "btn btn-default" })

    <br />
    <br />

    @Html.ActionLink("Modify Roles", "ChangeEmployeeRoles", new { userID = Model.Id }, htmlAttributes: new { @class = "btn btn-default" })
