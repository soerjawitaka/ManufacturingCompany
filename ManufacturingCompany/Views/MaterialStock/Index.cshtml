@model IEnumerable<ManufacturingCompany.Models.Material_Stock>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Html.ActionLink("Create New", "Index", "SelectMaterial", new { actionName = "Create", controllerName = "MaterialStock" }, htmlAttributes: new { @class = "btn btn-default" })
<table class="table">
    <tr>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.Material.material_name)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.material_unit_measure)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.material_unit_quantity)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.material_unit_cost)
        </th>
        <th class="text-info"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Material.material_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.material_unit_measure)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.material_unit_quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.material_unit_cost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning" })
            @*@Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default" })*@
            @if (User.IsInRole("SuperUser") || User.IsInRole("Manager") || User.IsInRole("Supervisor"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
            }
        </td>
    </tr>
}

</table>
