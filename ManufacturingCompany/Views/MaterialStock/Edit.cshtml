@model ManufacturingCompany.Models.Material_Stock

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.material_id)

        <div class="form-group">
            @Html.LabelFor(model => model.Material.material_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Material.material_name, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                <br />
                @Html.ActionLink("Change Material", "Index", "SelectMaterial", new { actionName = "Edit", controllerName = "MaterialStock", optionalID = Model.Id }, htmlAttributes: new { @class = "btn btn-primary"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.material_unit_measure, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.material_unit_measure, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.material_unit_measure, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.material_unit_quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.material_unit_quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.material_unit_quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.material_unit_cost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.material_unit_cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.material_unit_cost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

