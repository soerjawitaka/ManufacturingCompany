@model IEnumerable<ManufacturingCompany.Models.Product_Inventory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Index", "SelectProduct", new { actionName = "Create", controllerName = "ProductInventory" }, htmlAttributes: new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.Product.product_name)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.unit_quantity)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.unit_per_package)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.packaging_cost)
        </th>
        <th class="text-info">
            @Html.DisplayNameFor(model => model.per_package_price)
        </th>
        <th class="text-info"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.unit_quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.unit_per_package)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.packaging_cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.per_package_price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-default" }) 
            @if (User.IsInRole("SuperUser") || User.IsInRole("Manager"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
            }
        </td>
    </tr>
}

</table>
