@model ManufacturingCompany.Models.Payroll

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        <div class="text-center text-danger">
            @ViewBag.ErrorMessage
        </div>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.employee_id)

        <div class="form-group">
            @Html.Label("employee_name", "Employee Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("employee_name", (string)ViewBag.EmployeeUsername, htmlAttributes: new { @class = "form-control", @disabled = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.period_begin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.period_begin, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.period_begin.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.period_begin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.period_end, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.period_end, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.period_end.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.period_end, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
</div>
