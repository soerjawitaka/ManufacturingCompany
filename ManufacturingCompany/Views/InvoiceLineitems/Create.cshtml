@model ManufacturingCompany.Models.Invoice_Lineitem


@using (Html.BeginForm("Create", "InvoiceLineitems", new { invoiceID = (int)ViewBag.InvoiceID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create a lineitem</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.product_inventory_id)
        @Html.HiddenFor(model => model.invoice_id)
        <div class="form-group">
            @Html.LabelFor(model => model.ProductInventory.Product.product_name, "Product Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductInventory.Product.product_name, new { htmlAttributes = new { @class = "form-control", @disabled = "true", @style = "display:inline-block;" } })
                @*@Html.ActionLink("Edit Employee", "Index", "SelectUser", new { actionName = "Edit", controllerName = "Invoices", optionalID = Model.Id }, htmlAttributes: new { @class = "btn btn-primary", @style = "margin-left:20px;" })*@
                @Ajax.ActionLink("Edit Product", "Index", "PartialSelectProductInventory", new { actionName = "Create", controllerName = "InvoiceLineitems", optionalID = (int)ViewBag.InvoiceID }, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "SelectProductInventory", InsertionMode = InsertionMode.Replace }, htmlAttributes: new { @class = "btn btn-primary", @style = "margin-left:20px;" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.lineitem_unit_quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lineitem_unit_quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lineitem_unit_quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.invoice_id, "invoice_id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("invoice_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.invoice_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div id="SelectProductInventory"></div>
<div id="SelectInvoice"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
