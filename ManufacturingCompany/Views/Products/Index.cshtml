@model IEnumerable<ManufacturingCompany.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_short_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_unit_measure)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_unit_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Category.category_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_short_description)
        </td>
        <th>
            @Html.DisplayFor(modelItem => item.product_unit_measure)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.product_unit_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Category.category_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, htmlAttributes: new { @class = "btn btn-default" }) 
            @if (User.IsInRole("SuperUser") || User.IsInRole("Manager") || User.IsInRole("Supervisor"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
            }
        </td>
    </tr>
}

</table>
